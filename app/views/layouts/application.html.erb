<!DOCTYPE html>
<html>
<head>
  <title>请假信息管理</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <div class="navbar-brand glyphicon glyphicon-tree-conifer">请假信息管理</div>
      </div>

      <ul class="nav navbar-nav">
        <% if login? %>
            <% if admin? %>
                <li class="active"><%= link_to '首页', summaries_path %></li>
                <li><%= link_to '我的请假', summaries_user_path(:user_id => session[:user_id]) %></li>
                <li><%= link_to '我的管理', edit_user_path(session[:user_id]) %></li>
                <li><%= link_to '所有用户请假', summaries_path %></li>
                <li><%= link_to '所有用户管理', users_path %></li>
            <% else %>
                <li class="active"><%= link_to '首页', summaries_user_path(:user_id => session[:user_id]) %></li>
                <li><%= link_to '我的请假', summaries_user_path(:user_id => session[:user_id]) %></li>
                <li><%= link_to '我的管理', edit_user_path(session[:user_id]) %></li>
            <% end %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '登录', login_path %></li>
        <li><%= link_to '注销', logout_path, :method => :delete %></li>
      </ul>

    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
